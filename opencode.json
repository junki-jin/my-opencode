{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "opencode/grok-code",
  "plugin": [
    "opencode-gemini-auth@latest", 
    "opencode-pty",
  ],
  "enabled_providers": [
    "google",
    "openai", 
    "opencode",
    "openrouter",
  ],
  "provider": {
    "google": {
      "whitelist": [
        "gemini-3-flash-preview",
        "gemini-3-pro-preview",
      ],
    },
    "openai": {
      "whitelist": [
        "gpt-5.2-codex",
      ],
    },
    "opencode": {
      "whitelist": [
        "glm-4.7-free",
        "grok-code",
        "minimax-m2.1-free",
      ],
    },
    "openrouter": {
      "whitelist": [
        "anthropic/claude-opus-4.5",
        "anthropic/claude-sonnet-4.5",
        "x-ai/grok-4.1-fast",
      ],
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
    "gh-grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
    },
  },
}
